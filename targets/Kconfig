config LOSCFG_PLATFORM
    string
    default "Cloud_STM32F429IGTx_FIRE"  if LOSCFG_PLATFORM_STM32F429IGTX
    default "STM32F769IDISCOVERY"       if LOSCFG_PLATFORM_STM32F769IDISCOVERY
    default "STM32L431_BearPi"          if LOSCFG_PLATFORM_STM32L431_BearPi
    default "STM32F103_FIRE_Arbitrary"  if LOSCFG_PLATFORM_STM32F103_FIRE_ARBITRARY
    default "STM32F407_ATK_Explorer"    if LOSCFG_PLATFORM_STM32F407_ATK_EXPLORER
    default "STM32F072_Nucleo"          if LOSCFG_PLATFORM_STM32F072_Nucleo
    default "realview-pbx-a9"           if LOSCFG_PLATFORM_PBX_A9
    default "qemu-virt-a53"             if LOSCFG_PLATFORM_QEMU_VIRT_A53
    default "STM32L4R9I_Discovery"      if LOSCFG_PLATFORM_STM32L4R9AIIB
    default "STM32L496_Nucleo"          if LOSCFG_PLATFORM_STM32L496ZGT6
    default "STM32L476_NB476"           if LOSCFG_PLATFORM_STM32L476RGT6
choice
    prompt "Target"
    default LOSCFG_PLATFORM_STM32F429IGTX
    help
      support several boards:
      Cloud_STM32F429IGTx_FIRE
      STM32F769IDISCOVERY
      STM32L431_BearPi
      STM32F103_FIRE_Arbitrary
      STM32F407_ATK_Explorer
      STM32F072_Nucleo
      realview-pbx-a9
      qemu-virt-a53
      STM32L4R9I_Discovery
      STM32L496_Nucleo
      STM32L476_NB476

config LOSCFG_PLATFORM_STM32F429IGTX
    bool "Cloud_STM32F429IGTx_FIRE"
    select LOSCFG_USING_BOARD_LD
    select LOSCFG_ARCH_CORTEX_M4
    select LOSCFG_HW_SD_CARD
    select LOSCFG_HW_SPI_FLASH

config LOSCFG_PLATFORM_STM32F769IDISCOVERY
    bool "STM32F769IDISCOVERY"
    select LOSCFG_USING_BOARD_LD
    select LOSCFG_ARCH_CORTEX_M7
    select LOSCFG_HW_SD_CARD

config LOSCFG_PLATFORM_STM32L431_BearPi
    bool "STM32L431_BearPi"
    select LOSCFG_USING_BOARD_LD
    select LOSCFG_ARCH_CORTEX_M4

config LOSCFG_PLATFORM_STM32F103_FIRE_ARBITRARY
    bool "STM32F103_FIRE_Arbitrary"
    select LOSCFG_USING_BOARD_LD
    select LOSCFG_ARCH_CORTEX_M3

config LOSCFG_PLATFORM_STM32F407_ATK_EXPLORER
    bool "STM32F407_ATK_Explorer"
    select LOSCFG_USING_BOARD_LD
    select LOSCFG_ARCH_CORTEX_M4

config LOSCFG_PLATFORM_STM32F072_Nucleo
    bool "STM32F072_Nucleo"
    select LOSCFG_USING_BOARD_LD
    select LOSCFG_ARCH_CORTEX_M0

config LOSCFG_PLATFORM_PBX_A9
    bool "realview-pbx-a9"
    select LOSCFG_USING_BOARD_LD
    select LOSCFG_ARCH_CORTEX_A9

config LOSCFG_PLATFORM_QEMU_VIRT_A53
    bool "qemu-virt-a53"
    select LOSCFG_USING_BOARD_LD
    select LOSCFG_ARCH_CORTEX_A53
    select LOSCFG_ARCH_ARM_AARCH64

config LOSCFG_PLATFORM_STM32L476RGT6
    bool "STM32L476_NB476"
    select LOSCFG_USING_BOARD_LD
    select LOSCFG_ARCH_CORTEX_M4

config LOSCFG_PLATFORM_STM32L496ZGT6
    bool "STM32L496_Nucleo"
    select LOSCFG_USING_BOARD_LD
    select LOSCFG_ARCH_CORTEX_M4

config LOSCFG_PLATFORM_STM32L4R9AIIB
    bool "STM32L4R9I_Discovery"
    select LOSCFG_USING_BOARD_LD
    select LOSCFG_ARCH_CORTEX_M4

endchoice

config LOSCFG_USING_BOARD_LD
    bool

config LOSCFG_HW_SD_CARD
    bool

config LOSCFG_HW_SPI_FLASH
    bool

